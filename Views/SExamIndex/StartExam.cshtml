<div class="container mt-5">
    <h1>StartExam</h1>
    <br />
    <div class="row">
        <div class="col">
            <form asp-action="StartExam">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FRecordId" class="control-label"></label>
                    <input asp-for="FRecordId" class="form-control" />
                    <span asp-validation-for="FRecordId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FStudentId" class="control-label"></label>
                    <input asp-for="FStudentId" class="form-control" />
                    <span asp-validation-for="FStudentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FExamPaperId" class="control-label"></label>
                    <input asp-for="FExamPaperId" class="form-control" />
                    <span asp-validation-for="FExamPaperId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FSujectId" class="control-label"></label>
                    <input asp-for="FSujectId" class="form-control" />
                    <span asp-validation-for="FSujectId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FQuestion" class="control-label"></label>
                    <input asp-for="FQuestion" class="form-control" />
                    <span asp-validation-for="FQuestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FChoose" class="control-label"></label>
                    <input asp-for="FChoose" class="form-control" />
                    <span asp-validation-for="FChoose" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FOption1" class="control-label"></label>
                    <input asp-for="FOption1" class="form-control" />
                    <span asp-validation-for="FOption1" class="text-danger"></span>
                </div>

              
                <div class="form-group">
                    <input type="submit" value="交卷" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

